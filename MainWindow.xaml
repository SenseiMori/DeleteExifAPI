<Window x:Class="TextRemoveExif.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local="clr-namespace:TextRemoveExif.ViewModel"
        Title="MainWindow" Height="600" Width="830">
    <Window.DataContext>
        <local:MainViewModel/>
    </Window.DataContext>

    <Grid Margin="0,0,0,-6">

        <Button Content="Добавить все изображения из папки" Height="53" Margin="561,42,37,495" Command="{Binding AddImageFolderCommand}" CommandParameter="{Binding images}"/>
        <Button Content="Удалить изображение" Margin="284,432,320,112" Command="{Binding RemoveImageCommand}" CommandParameter="{Binding images}"/>
        <ListBox ItemsSource="{Binding images}" 
                 Height="360" 
                 Margin="10,27,397,0" 
                 VerticalAlignment="Top" 
                 SelectedItem="{Binding selectedImage}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Vertical" Margin="10">
                        <Image Source="{Binding FileName}" Width="100" Height="100" Margin="5"/>
                        <TextBlock Text="{Binding FilePath}" VerticalAlignment="Stretch" Margin="10,0,0,0"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Button Content="Удалить метаданные" Height="53" Margin="561,193,37,344" Command="{Binding RemoveMetadataCommand}" CommandParameter="{Binding images}"/>
        <Button Content="Добавить несколько изображений" Margin="561,116,37,423" Command="{Binding AddImageCommand}" CommandParameter="{Binding images}"/>
        <CheckBox Content="Открыть папку по завершении удаления" Margin="561,335,23,228" IsChecked="{Binding IsFolderOpen, Mode=TwoWay}" />
        <Button Content="Удалить все изображения" Margin="561,432,37,112" Command="{Binding RemoveImagesCommand}" CommandParameter="{Binding images}"/>


    </Grid>
</Window>
