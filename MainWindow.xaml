<Window x:Class="TextRemoveExif.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local="clr-namespace:TextRemoveExif.ViewModel"
        Title="ERemover" Height="431" Width="672">
    <Window.DataContext>
        <local:MainViewModel/>
    </Window.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="Auto"/>

        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="2" Orientation="Vertical" Margin="0,10,10,0">
            <Button Content="Добавить все изображения из папки" Padding="10" Margin="5" Height="auto" Width="auto" Command="{Binding AddImageFolderCommand}" CommandParameter="{Binding images}"/>
            <Button Content="Добавить несколько изображений"  Margin="5" Command="{Binding AddImageCommand}" CommandParameter="{Binding images}" Height="44"/>
            <Button Content="Удалить изображение" Margin="5" Height="auto" Width="auto" Command="{Binding RemoveImageCommand}" CommandParameter="{Binding images}"/>
            <Button Content="Удалить все изображения" Margin="5" Command="{Binding RemoveImagesCommand}" CommandParameter="{Binding images}" Height="auto" Width="auto"/>
            <Button Content="Удалить метаданные" Margin="10" Height="42" Command="{Binding RemoveMetadataCommand}" CommandParameter="{Binding images}" Width="244"/>
            <CheckBox Content="Открыть папку по завершении удаления" Margin="5" IsChecked="{Binding IsFolderOpen, Mode=TwoWay}" />
        </StackPanel>
        <Grid Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="184*"/>
                <ColumnDefinition Width="181*"/>
            </Grid.ColumnDefinitions>
            <ListBox ItemsSource="{Binding images}" 
          
          Margin="10" 
          Height="auto" 
          Width="345"
          SelectedItem="{Binding selectedImage}" HorizontalAlignment="Left" Grid.ColumnSpan="2">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Vertical" Margin="10">
                            <Image Source="{Binding FileName}" Width="200" Height="200" Margin="5"/>
                            <TextBlock Text="{Binding ShortFileName}" Margin="10"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

        </Grid>


    </Grid>
</Window>
