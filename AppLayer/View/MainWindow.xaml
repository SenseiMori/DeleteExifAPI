<Window x:Class="AppCore.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local="clr-namespace:AppCore.ViewModel"
        Title="PicTweak" Height="500" Width="1000" ResizeMode="CanResizeWithGrip"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="Auto"/>

        </Grid.ColumnDefinitions>

        <StackPanel VerticalAlignment="Top" Height="42" >
            <Menu Width="407" Height="29" Background="White">
                <MenuItem Header="Файл" >
                    <MenuItem Header="Выход" VerticalAlignment="Center" Command="{Binding ExitCommand}"/>
                </MenuItem>
                <MenuItem Header="Быстрая настройка" VerticalAlignment="Center" >
                    <!--<CheckBox Content="Создать архив в папке" IsChecked="{Binding IsCreateZip, Mode=TwoWay}" />-->
                    <CheckBox Content="Открыть папку по завершении" IsChecked="{Binding IsOpenDirectory, Mode=TwoWay}"/>
                    <MenuItem Header="Уменьшение разрешения">
                        <CheckBox Content="Оптимальное" IsChecked="{Binding IsBestResolution, Mode=TwoWay}" Command="{Binding GetExpectedDataCommand}"/>
                        <CheckBox Content="Среднее" IsChecked="{Binding IsNormalResolution, Mode=TwoWay}" Command="{Binding GetExpectedDataCommand}"/>
                        <CheckBox Content="Сильное" IsChecked="{Binding IsExtraResolution, Mode=TwoWay}" Command="{Binding GetExpectedDataCommand}"/>
                        <CheckBox Content="Нет" IsChecked="{Binding IsNotChangeResolution, Mode=TwoWay}" Command="{Binding GetExpectedDataCommand}"/>
                    </MenuItem>
                    <MenuItem Header="Уменьшение веса">
                        <CheckBox  Content="Оптимальное" IsChecked="{Binding IsBestCompress, Mode=TwoWay}" Command="{Binding GetExpectedDataCommand}"/>
                        <CheckBox Content="Среднее" IsChecked="{Binding IsNormalCompress, Mode=TwoWay}" Command="{Binding GetExpectedDataCommand}"/>
                        <CheckBox Content="Сильное" IsChecked="{Binding IsExtraCompress, Mode=TwoWay}" Command="{Binding GetExpectedDataCommand}"/>
                        <CheckBox Content="Нет" IsChecked="{Binding IsCompressNone, Mode=TwoWay}" Command="{Binding GetExpectedDataCommand}"/>
                    </MenuItem>
                    <CheckBox Content="Удалить метаданные" IsChecked="{Binding IsRemove, Mode=TwoWay}"/>
                </MenuItem>
                <MenuItem Header="Справка" VerticalAlignment="Center" >
                    <MenuItem Header="Открыть страницу разработчика на GitHub" Command="{Binding OpenGitHub}"/>
                </MenuItem>
            </Menu>
        </StackPanel>

        <StackPanel Grid.Column="2" Orientation="Vertical" Margin="20,21,20,20">
            <Button Padding="10" Margin="5" Height="56" Width="auto" Command="{Binding AddFolderCommand}" CommandParameter="{Binding images}" FontSize="11">
                <TextBlock Text="Добавить все изображения из папки" TextWrapping="Wrap" TextAlignment="Center" FontSize="12" />
            </Button>
            <!--<Button Margin="5" Command="{Binding AddImageCommand}" CommandParameter="{Binding images}" Height="61">
                <TextBlock Text="Добавить несколько изображений" TextWrapping="Wrap" TextAlignment="Center" />
            </Button> -->
            <Button Margin="5" Command="{Binding RemoveImagesCommand}" CommandParameter="{Binding images}" Height="58" Width="auto" >
                <TextBlock Text="Удалить все изображения" TextWrapping="Wrap" TextAlignment="Center" Cursor="" />
            </Button>
            <Button Margin="10" Height="56" Width="244" Command="{Binding ManipulateCommand}" CommandParameter="{Binding images}">
                <TextBlock Text="Сохранить измененные изображения" TextWrapping="Wrap" TextAlignment="Center" Height="18" />
            </Button>
            <!--<Button Content="" Margin="5" Height="auto" Width="auto" Command="{Binding RemoveImageCommand}" CommandParameter="{Binding images}"/> -->
        </StackPanel>
        <ScrollViewer Margin="0,21,10,0" Grid.ColumnSpan="2">
            <WrapPanel>
                <ItemsControl ItemsSource="{Binding images}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="NavajoWhite" Margin="5" Padding="10" CornerRadius="5">
                                <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Height="auto">
                                    <Image Source="{Binding FileName}" Width="100" Height="100" HorizontalAlignment="Center" Stretch="UniformToFill"/>

                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Название:" FontWeight="Bold" Margin="0,0,5,0"/>
                                        <TextBlock Text="{Binding ShortFileName}" Width="80" TextTrimming="CharacterEllipsis"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Размер:" FontWeight="Bold" Margin="0,0,5,0"/>
                                        <TextBlock Text="{Binding WidthHeight}" Width="80" TextTrimming="CharacterEllipsis"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Ожид. размер:" FontWeight="Bold" Margin="0,0,5,0"/>
                                        <TextBlock Text="{Binding ExpectedWidthHeight}" Width="80" TextTrimming="CharacterEllipsis"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Вес:" FontWeight="Bold" Margin="0,0,5,0"/>
                                        <TextBlock Text="{Binding Size}" Width="80" TextTrimming="CharacterEllipsis"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Ожид. вес:" FontWeight="Bold" Margin="0,0,5,0"/>
                                        <TextBlock Text="{Binding ExpectedSize}" Width="80" TextTrimming="CharacterEllipsis"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </WrapPanel>
        </ScrollViewer>


    </Grid>
</Window>
