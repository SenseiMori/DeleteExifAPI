<Window x:Class="AppLayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local="clr-namespace:AppLayer.ViewModel"
        Title="ERemover" Height="455" Width="929" ResizeMode="CanResizeWithGrip"
        WindowStartupLocation="CenterScreen">
    <Window.DataContext>
        <local:MainViewModel/>
    </Window.DataContext>


    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="Auto"/>

        </Grid.ColumnDefinitions>

        <StackPanel VerticalAlignment="Top" Height="20" >
            <Menu>
                <MenuItem Header="Файл" >
                    <MenuItem Header="Выход" />
                </MenuItem>
                <MenuItem Header="Настройки" >
                    <CheckBox Content="Создать архив в папке" IsChecked="{Binding IsCreateZip, Mode=TwoWay}" />
                    <CheckBox Content="Открыть папку по завершении удаления" IsChecked="{Binding IsFolderOpen, Mode=TwoWay}"/>
                    <MenuItem Header="Уменьшение разрешения">
                        <RadioButton GroupName="MyGroup1" Content="Оптимальное" IsChecked="{Binding IsBestResolution, Mode=TwoWay}" Command="{Binding GetExpectedDataCommand}"/>
                        <RadioButton Content="Среднее" IsChecked="{Binding IsNormalResolution, Mode=TwoWay}" Command="{Binding GetExpectedDataCommand}"/>
                        <RadioButton Content="Сильное" IsChecked="{Binding IsExtraResolution, Mode=TwoWay}" Command="{Binding GetExpectedDataCommand}"/>
                        <RadioButton Content="Нет" IsChecked="{Binding IsNotChangeResolution, Mode=TwoWay}" Command="{Binding GetExpectedDataCommand}"/>
                    </MenuItem>
                    <MenuItem Header="Уменьшение веса">
                        <RadioButton  Content="Оптимальное" IsChecked="{Binding IsBestCompress, Mode=TwoWay}" Command="{Binding GetExpectedDataCommand}"/>
                        <RadioButton Content="Среднее" IsChecked="{Binding IsNormalCompress, Mode=TwoWay}" Command="{Binding GetExpectedDataCommand}"/>
                        <RadioButton Content="Сильное" IsChecked="{Binding IsExtraCompress, Mode=TwoWay}" Command="{Binding GetExpectedDataCommand}"/>
                        <RadioButton Content="Нет" IsChecked="{Binding IsCompressNone, Mode=TwoWay}" Command="{Binding GetExpectedDataCommand}"/>
                    </MenuItem>
                    <RadioButton Content="Удалить метаданные" IsChecked="{Binding IsRemove, Mode=TwoWay}"/>
                </MenuItem> 
                    <MenuItem Header="Справка"/>
            </Menu>
        </StackPanel>

        <StackPanel Grid.Column="2" Orientation="Vertical" Margin="20" Grid.ColumnSpan="2">
            <Button Content="Добавить все изображения из папки" Padding="10" Margin="5" Height="auto" Width="auto" Command="{Binding AddFolderCommand}" CommandParameter="{Binding images}"/>
            <Button Content="Добавить несколько изображений"  Margin="5" Command="{Binding AddImageCommand}" CommandParameter="{Binding images}" Height="44"/>
            <Button Content="Удалить изображение" Margin="5" Height="auto" Width="auto" Command="{Binding RemoveImageCommand}" CommandParameter="{Binding images}"/>
            <Button Content="Удалить все изображения" Margin="5" Command="{Binding RemoveImagesCommand}" CommandParameter="{Binding images}" Height="auto" Width="auto"/>
            <Button Content="Изменить" Margin="10" Height="40" Command="{Binding ManipulateCommand}" CommandParameter="{Binding images}" Width="244"/>

        </StackPanel>
        <ScrollViewer Margin="0,25,10,0" Grid.ColumnSpan="2">
            <WrapPanel>
                <ItemsControl ItemsSource="{Binding images}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="LightBlue" Margin="5" Padding="10" CornerRadius="5">
                                <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Height="auto" >
                                    <Image Source="{Binding FileName}" Width="100" Height="100" HorizontalAlignment="Center" Stretch="UniformToFill"/>
                                    <TextBlock Text="{Binding ShortFileName}" TextAlignment="Center" Width="80" TextTrimming="CharacterEllipsis" TextWrapping="NoWrap"/>
                                    <TextBlock Text="{Binding WidthHeight}" TextAlignment="Center" Width="80" TextTrimming="CharacterEllipsis" TextWrapping="NoWrap"/>
                                    <TextBlock Text="{Binding ExpectedWidthHeight}" TextAlignment="Center" Width="80" TextTrimming="CharacterEllipsis" TextWrapping="NoWrap"/>
                                    <TextBlock Text="{Binding Size}" TextAlignment="Center" Width="80" TextTrimming="CharacterEllipsis" TextWrapping="NoWrap"/>
                                    <TextBlock Text="{Binding ExpectedSize}" TextAlignment="Center" Width="80" TextTrimming="CharacterEllipsis" TextWrapping="NoWrap"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </WrapPanel>
        </ScrollViewer>


    </Grid>
</Window>
